<%- model_class = WorkCalendar -%>
<div class="page-content">
  <div class="page-header position-relative">
    <h1>
      Calendarios Laborales
      <small>
        <i class="icon-double-angle-right"></i>
        por pais
      </small>
    </h1>
  </div><!--/.page-header-->

  <div class="row-fluid">
    <div class="span12">
      <%= render "partials/notices" %>
      <div class="tabbable">
        <%= render "settings_menu" %>
        <div class="tab-content">
          <legend><%= t('layout.titles.calendarios_laborales') %></legend>
          <table class="table table-hover table-striped" id="work_calendars">
            <thead>
              <tr>
                <th><%= model_class.human_attribute_name(:id) %></th>
                <th><%= model_class.human_attribute_name(:title) %></th>
                <th><%= model_class.human_attribute_name(:year) %></th>
                <th><%= model_class.human_attribute_name(:country_id) %></th>
                <th><%=t '.actions', :default => t("helpers.actions") %></th>
              </tr>
            </thead>
            <tbody>
              <% @work_calendars.each do |calendar| %>
                <tr>
                  <td><%= link_to calendar.id, "#"%></td>
                  <td><%= calendar.title %></td>
                  <td><%= calendar.year %></td>
                  <td><%= calendar.country.name %></td>
                  <td>
                    <%= link_to t('.manage_timeframes', :default => t("helpers.titles.manage_timeframes")),"/admin_modules/panel/work_timeframes/#{calendar.id}", :class => 'btn btn-mini btn-success' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                              "/admin_modules/panel/delete_calendar/#{calendar.id}",
                              :method => :get,
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-mini btn-danger' %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <a href="#myModal" role="button" class="btn btn-primary" data-toggle="modal">Nuevo </a>
      <div id="myModal" class="modal hide fade" tabindex="-1"  aria-labelledby="myModalLabel">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">Creaer nuevo Calendario</h3>
        </div>
        <div class="modal-body">
          <%= simple_form_for @work_calendar, :url => url_for("/admin_modules/panel/new_calendar"),:html => { :class => 'form-horizontal' } do |f| %>
             <%= f.error_notification %>
             <div class="form-inputs">
               <%= f.input :title %>
               <%= f.input :year%>
               <%= f.input :timeframe_type, collection: TIMEFRAME_TYPES, as: :select %>
               <%= f.association :country, collection: current_admin.company.countries.all.order('name')%>

             </div>
             <div class="form-actions">
               <%= f.button :submit, "Asignar", :class=>"btn btn-info" %>
             </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
