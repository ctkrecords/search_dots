<%=render "partials/notices" %>
<%= simple_form_for @talent_hunter, :url => admin_modules_talent_hunters_path,:html => { :class => 'form-horizontal' } do |f| %>  
<div class="span5">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :email %>
    <%= f.association :country, collection: current_admin.company.countries.all(:conditions=>["is_deleted=?",false]), prompt:"PaÃ­s", include_blank: false%>
    <%= f.input :is_active, as: :select %>
    <%= f.input :password%>
    <%= f.input :password_confirmation%>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_modules_talent_hunters_path, :class => 'btn' %>
    </div>
</div>
<div class="span3">
    <% if @talent_hunter.photo? %>
      <%=image_tag(@talent_hunter.photo.url(:medium),:class=>"img-rounded img-polaroid") %>
      <p class="text-info">Seleccionar otra si se desea cambiar</p>
    <% end%>
    <%= f.file_field :photo  %>
</div>
<% end %>