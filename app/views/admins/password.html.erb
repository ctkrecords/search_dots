<h2><%=t('.password', :default => [:'helpers.titles.password'])%></h2>

<%= simple_form_for @admin, :url => url_for("/change_password"),:method => 'post' do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :password, :autocomplete => "off", :vallue=>"", :hint => "Dejar en blanco si no se desea cambiar", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "Necesitamos tu contraseÃ±a actual para confirmar el cambio", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", :class=>"btn btn-info" %>
  </div>
<% end %>
