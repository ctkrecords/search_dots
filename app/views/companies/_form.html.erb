<%= simple_form_for @company, :html => { :class => 'form-horizontal' } do |f| %>
<div class="span5">
  <%= f.input :name %>
  <%= f.association :country, include_blank: false %>
  <%= f.input :website %>
  <%= f.input :slogan %>
  <%= f.input :contact_name %>
  <%= f.input :contact_lastname %>
  <%= f.input :email %>
  <%= f.input :phones %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), companies_path, :class => 'btn' %>
  </div>
</div>
<div class="span3">
   <% if @company.logo? %>
      <%=image_tag(@company.logo.url(:medium),:class=>"img-rounded img-polaroid") %>
      <p class="text-info">Seleccionar otra si se desea cambiar</p>
    <% end%>
    <%= f.file_field :logo  %>
</div>
<% end %>
