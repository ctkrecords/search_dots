<%- model_class = Admin -%>
<div class="page-header">
    <h1><%=@company.name%> Administradores</h1>
</div>
<%= render :partial => 'companies_menu' %>
<div class="span10">

    <table class="table table-bordered table-hover" id="company_admins">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:fullname) %></th>
          <th><%= model_class.human_attribute_name(:admin_type_id) %></th>
          <th><%= model_class.human_attribute_name(:country) %></th>
          <th><%= model_class.human_attribute_name(:is_active) %></th>
          <th><%= model_class.human_attribute_name(:is_verified)%></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody>
        <% @unassigned_admins.each do |admin| %>
          <tr>
            <td><%=admin.id %></td>
            <td><%= link_to admin.fullname, admin_path(admin)%></td>
            <td><%= admin.admin_type.name unless admin.admin_type_id.nil? %></td>
            <td><%= admin.country.shortname unless admin.country_id.nil? %></td>
            <td><%= link_to admin.is_active ? "Desactivar" : "Activar", "/companies/active_company_active/#{admin.id}", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => admin.is_active ? "btn btn-mini btn-danger" : "btn btn-mini btn-success" %></td>
            <td><%= admin.is_verified ? "Confirmado" : "No confirmado" %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          "/companies/edit_admin/#{admin.id}", :class => 'btn btn-mini' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
