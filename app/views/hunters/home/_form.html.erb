<%= simple_form_for @talent_hunter, :url=>hunters_my_profile_save_path, :html => { :class => 'form-horizontal' }, :method=>:post do |f| %>  
<div class="span5">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :email, disabled: true %>
    <br>
    <%= f.input :password, :required=>false %>
    <%= f.input :password_confirmation, :required=>false %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  hunters_my_profile_path, :class => 'btn' %>
    </div>
</div>
<div class="span3">
    <% if @talent_hunter.photo? %>
      <%=image_tag(@talent_hunter.photo.url(:medium),:class=>"img-rounded img-polaroid") %>
      <p class="text-info">Seleccionar otra si se desea cambiar</p>
    <% end%>
    <%= f.file_field :photo  %>
</div>
<% end %>