<%= simple_form_for @talent_hunter, :html => { :class => 'form-horizontal' } do |f| %>  
<div class="span5">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :email %>
    <%= f.association :country%>
    <%= f.association :company%>
    <%= f.input :is_active %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  talent_hunters_path, :class => 'btn' %>
    </div>
</div>
<div class="span3">
    <% if @talent_hunter.photo? %>
      <%=image_tag(@talent_hunter.photo.url(:medium),:class=>"img-rounded img-polaroid") %>
      <p class="text-info">Seleccionar otra si se desea cambiar</p>
    <% end%>
    <%= f.file_field :photo  %>
</div>
<% end %>